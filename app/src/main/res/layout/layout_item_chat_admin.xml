<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="6"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageview_adminchat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/avatar_app" />
    <LinearLayout
        android:layout_marginLeft="4dp"
        android:gravity="left"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_User_adminchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple Inc"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_contentLast_adminchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's start a conversation..."
            android:textColor="#808080" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="8dp"
        android:gravity="right"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_Time_adminchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:0:0"
            android:textColor="#808080" />

        <ImageView
            android:id="@+id/imageview_Seen_adminchat"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/icon_notseen_adminchat" />
    </LinearLayout>
</LinearLayout>