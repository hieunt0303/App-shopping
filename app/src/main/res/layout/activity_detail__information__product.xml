<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="151dp"
    tools:layout_editor_absoluteY="282dp"
    android:background="@color/white"
    android:fillViewport="true">


<ScrollView tools:layout_editor_absoluteX="151dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="282dp"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Detail_Information_Product">


        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/white"
            android:elevation="0dp"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_back" />

        <TextView
            android:id="@+id/header_name_category_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:elevation="0dp"
            android:text="iPhone 12"
            android:textColor="#808080"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_slideProduct"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="20dp"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_name_category_product" />

        <TextView
            android:id="@+id/name_product_detail"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:elevation="0dp"
            android:text="Apple iPhone 12 Pro 128GB"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/viewpager_slideProduct" />

        <TextView
            android:id="@+id/price_product_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="40dp"
            android:elevation="0dp"
            android:text="$846.00"
            android:textColor="#F87328"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/name_product_detail"
            app:layout_constraintTop_toBottomOf="@+id/viewpager_slideProduct" />

        <ImageView
            android:id="@+id/icon_ngoisao2_detail"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="20dp"
            android:elevation="0dp"
            app:layout_constraintEnd_toStartOf="@+id/icon_ngoisao3_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/icon_ngoisao1_detail"
            app:layout_constraintTop_toBottomOf="@+id/name_product_detail"
            app:srcCompat="@drawable/icon_star" />

        <ImageView
            android:id="@+id/icon_ngoisao1_detail"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="20dp"
            android:elevation="0dp"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/name_product_detail"
            app:srcCompat="@drawable/icon_star" />

        <ImageView
            android:id="@+id/icon_ngoisao3_detail"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="20dp"
            android:elevation="0dp"
            app:layout_constraintEnd_toStartOf="@+id/icon_ngoisao4_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/icon_ngoisao2_detail"
            app:layout_constraintTop_toBottomOf="@+id/name_product_detail"
            app:srcCompat="@drawable/icon_star" />

        <ImageView
            android:id="@+id/icon_ngoisao5_detail"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="20dp"
            android:elevation="0dp"
            app:layout_constraintEnd_toStartOf="@+id/numberRatingbar_product_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/icon_ngoisao4_detail"
            app:layout_constraintTop_toBottomOf="@+id/name_product_detail"
            app:srcCompat="@drawable/icon_star" />

        <ImageView
            android:id="@+id/icon_ngoisao4_detail"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="20dp"
            android:elevation="0dp"
            app:layout_constraintEnd_toStartOf="@+id/icon_ngoisao5_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/icon_ngoisao3_detail"
            app:layout_constraintTop_toBottomOf="@+id/name_product_detail"
            app:srcCompat="@drawable/icon_star" />

        <TextView
            android:id="@+id/numberRatingbar_product_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="16dp"
            android:elevation="0dp"
            android:text="5.0"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/numberBought_product_detail"
            app:layout_constraintTop_toBottomOf="@+id/name_product_detail" />

        <TextView
            android:id="@+id/numberBought_product_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="252dp"
            android:layout_marginRight="232dp"
            android:elevation="0dp"
            android:text="(100k)"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_product_detail" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout_detail_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:tabIndicatorColor="#79CEED"
            app:tabIndicatorFullWidth="false"
            app:tabMode="scrollable"
            app:tabTextColor="@color/black">

            <!--            <com.google.android.material.tabs.TabItem-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Description" />-->


            <!--            <com.google.android.material.tabs.TabItem-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Detail" />-->
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_detail_product"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout_detail_product"
            tools:layout_editor_absoluteX="-5dp" />

        <TextView
            android:id="@+id/guideline7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:height="1dp"
            android:elevation="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/numberBought_product_detail" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <ListView
            android:id="@+id/listview_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/viewpager_detail_product"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

    <Button
        android:id="@+id/button_buynow"
        android:layout_marginBottom="12dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_botron4goc"
        android:elevation="3dp"
        android:padding="12dp"
        android:text="BUY NOW"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_addtocart"
         />

    <Button
        android:id="@+id/button_addtocart"
        android:layout_marginBottom="12dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_botron4goc"
        android:elevation="3dp"
        android:padding="12dp"
        android:text="ADD TO CART"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/button_buynow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>