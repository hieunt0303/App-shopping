<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/shopping_layout"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:id="@+id/layout_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
        <ImageView
            android:id="@+id/btn_back1"
            android:layout_width="30dp"
            android:layout_height="46dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icon_back">
        </ImageView>
        <TextView
            android:layout_weight="5"
            android:id="@+id/txt_shopping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#808080"
            android:layout_margin="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toEndOf="@+id/imgbtnback"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_information"
        android:layout_weight="9"
        app:layout_constraintStart_toEndOf="@+id/layout_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="6">
            <TextView
                android:id="@+id/txt_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Full name"
                android:textColor="#000000"
                android:textSize="24sp">
            </TextView>
            <EditText
                android:layout_weight="1"
                android:id="@+id/edittxt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="10dp"
                android:hint="Type your name"
                android:textColorHint="#808080"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:maxLength="30"
                android:background="@drawable/rec2"
                android:inputType="text"
                android:maxLines="1"
                android:lines="1">
            </EditText>
            <TextView
                android:id="@+id/txt_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Phonenumber"
                android:textColor="#000000"
                android:textSize="24sp">
            </TextView>
            <EditText
                android:layout_weight="1"
                android:id="@+id/edittxt_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="10dp"
                android:hint="Type your phonenumber"
                android:textColorHint="#808080"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:maxLength="20"
                android:background="@drawable/rec2"
                android:inputType="number"
                android:digits="0123456789">
            </EditText>
            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="24sp">
            </TextView>
            <EditText
                android:layout_weight="1"
                android:id="@+id/edittxt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="10dp"
                android:hint="Type your address"
                android:textColorHint="#808080"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:maxLength="200"
                android:background="@drawable/rec2"
                android:inputType="text"
                android:maxLines="3"
                android:lines="3">
            </EditText>
        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:text="Submit"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/rec1">
        </Button>
    </LinearLayout>

</LinearLayout>